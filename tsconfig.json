{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    // Inversify

    "lib": ["ES6", "DOM"],
    "types": ["reflect-metadata"],
    "module": "ESNext",
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    //
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@components/*": ["src/lib/components/*"],
      "@assets/*": ["src/assets/*"]
    },
    "resolveJsonModule": true,
    "baseUrl": "./",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "src/lib/themesList.cjs"
  ]
}
